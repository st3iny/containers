#!/bin/sh

# Configure and start JDownloader.

src=/init/JDownloader.jar
dest=/opt/jdownloader/JDownloader.jar
flag=/opt/jdownloader/installed.flag

if [ ! -f "$flag" ]; then
    echo Installing JDownloader
    cp "$src" "$dest"
    touch "$flag"
fi

set-myjd-credentials
exec java -jar "$dest" -norestart
